{% extends "base.html.twig" %}

{% block title %}Alan Derex{% endblock %}

{% block meta %}
    <link rel="icon" href="{{ asset("favicon.png") }}" type="image/x-icon" />
{% endblock %}

{% block stylesheets %}	
	<link rel="stylesheet" href="{{ asset("css/bootstrap.min.css") }}" />
	<link rel="stylesheet" href="{{ asset("css/fontawesome.min.css") }}" />
{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="{{ path('app_home') }}">Alan Derex</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbar">
            {{ knp_menu_render('main', {'currentClass': 'active', 'template': 'menu/knp_menu_bootstrap.html.twig'}) }}
            {{ knp_menu_render('user', {'currentClass': 'active', 'template': 'menu/knp_menu_bootstrap.html.twig'}) }}
        </div>
    </nav>

    <div class="container mt-4">
        {% block content %}{% endblock %}
    </div>
{% endblock %}

{% block javascripts %}
	<script type="text/javascript" src="{{ asset("js/jquery.min.js") }}"></script>
	<script type="text/javascript" src="{{ asset("js/popper.min.js") }}"></script>
	<script type="text/javascript" src="{{ asset("js/bootstrap.min.js") }}"></script>
{% endblock %}
